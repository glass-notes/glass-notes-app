<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_new_note_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="10dp"
            android:minHeight="0dp"
            android:text="@string/create_new_note"
            android:textAlignment="viewStart"
            android:textSize="4sp" />


        <Button
            android:id="@+id/add_new_todo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="10dp"
            android:minHeight="0dp"
            android:text="@string/add_new_todo_button"
            android:textAlignment="viewStart"
            android:textSize="4sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Existing:"
            android:textSize="4sp" />

        <ListView
            android:id="@+id/existing_notes_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>
</android.widget.LinearLayout>